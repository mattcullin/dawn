{%- comment -%}
    CLUB - Renders shipping discount banner - threshold is in local currency 
    - pass optional 'mini_banner' variable to output single line banner specific to product page

    Usage:
    {% render 'club-shipping-discount-banner' (, mini_banner: true) %}
{%- endcomment -%}

{%- liquid 
    capture zone
      render 'club-zone'
    endcapture 

    case zone
      when 'GB', 'EU3'
        assign free_shipping_threshold = 10000
      when 'EU1'
        assign free_shipping_threshold = 15000
      when 'EU2'
        assign free_shipping_threshold = 20000
      when 'US'
        assign free_shipping_threshold = 10000
      when 'AU'
        assign free_shipping_threshold = 25000
      when 'CA'
        assign free_shipping_threshold = 15000
      when 'ROW'
        assign free_shipping_threshold = 10000
    endcase

    assign gross_total = cart.total_price
-%}

{%- if mini_banner -%}
  <p class="product__text caption-with-letter-spacing"><strong>ðŸš› FREE shipping over {{ free_shipping_threshold | money_without_trailing_zeros }}</strong></p>
{%- else -%}
<div class="club-shipping-discount-banner">
    {% if gross_total > 0 and gross_total < free_shipping_threshold %}
        <p class="dashed-banner accent-text accent-border">ðŸšš Spend <strong>another {{ free_shipping_threshold | minus: gross_total | money }}</strong> to get<br><span class="highlight">FREE shipping</span></p>
    {% elsif gross_total >= free_shipping_threshold %}
        <p class="dashed-banner">ðŸš› You get <span class="highlight-alt">FREE shipping</span>!</p>
    {% endif %}
</div>
{%- endif -%}