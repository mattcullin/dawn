{%- comment -%}
    CLUB - Renders 'VAT included' message for GB, or appropriate alternative for other Zones

    Usage:
    {% render 'club-tax-message' %}
    
    or to render to a variable:
    {%- liquid 
        capture tax_message
            render 'club-tax-message'
        endcapture 
    -%}
{%- endcomment -%}

{%- liquid 
    capture zone
        render 'club-zone'
    endcapture 
-%}
{%- liquid 
case zone
    when 'GB'
        assign tax_message = 'VAT included.'
    when 'EU3'
        assign tax_message = ''
    when 'EU'
        assign tax_message = 'Import taxes included.'
    when 'US'
        assign tax_message = ''
    when 'AU'
        assign tax_message = ''
    when 'CA'
        assign tax_message = 'Import taxes not included.'
    else
        assign tax_message = 'Import taxes not included.'
    endcase
-%}
{{ tax_message }}